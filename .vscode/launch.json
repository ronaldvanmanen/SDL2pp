{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "name": "(Windows) Launch sample",
        "type": "cppvsdbg",
        "request": "launch",
        "program": "${workspaceFolder}/artifacts/build/x64-debug/samples/${input:samples}.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "console": "externalTerminal"
    },
    {
        "name": "(Windows) Launch ctest",
        "type": "cppvsdbg",
        "request": "launch",
        "presentation": { "hidden": true },
        "program": "${cmake.testProgram}",
        "args": [ "${cmake.testArgs}"],
        "cwd": "${fileDirname}",
    }
    ],
    "inputs": [
    {
        "id": "samples",
        "description": "Choose which sample should be launched",
        "type": "pickString",
        "options": [
            "plasma_fractal",
            "tunnel_effect"
        ]
    },
    ]
}